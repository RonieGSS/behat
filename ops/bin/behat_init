#! /bin/bash

cd `dirname $0`/../../
behat_root=$(pwd)
behat_src='src/behat'
composer="docker run -it --rm -v ${behat_root}/${behat_src}:/var/www/html hxhroniegss/composer"
behat="docker run -it --rm -v ${behat_root}/${behat_src}:/src hxhroniegss/behat"

echo "
= = = = = = = = = = = = = = = = = = = 
	Running composer install ...
= = = = = = = = = = = = = = = = = = = 
"
$composer install

echo "
= = = = = = = = = = = = = = = = = = = 
	Running behat init ...
= = = = = = = = = = = = = = = = = = = 
"

$behat --init